{
  "compilerOptions": {
      "outDir": "./dist/",
      "sourceMap": true,
      "noImplicitAny": false,
      "module": "commonjs",
      "target": "es5",
      "esModuleInterop": true,
      // "strict": false, // 开启所有严格的类型检查，为 true 时，下面类型检查相关的取值也都为 true
      // "strictBindCallApply": false, // 严格的 bind、call、apply 检查
      "suppressImplicitAnyIndexErrors":true,
      "jsx": "react"
  },
  "lib": [ "dom", "es5", "es2015.promise" ],
  "include": [
    "./src/*"
  ]
}